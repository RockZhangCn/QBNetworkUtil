<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                style="@style/FitSystemWindows"
                android:layout_height="match_parent"
                tools:context="com.tencent.rocksnzhang.qbnetworkutil.SplashActivity">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="entry"
            android:src="@drawable/flyhigher"
            android:id="@+id/iv_entry"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:gravity="center"
            android:textSize="22sp"
            android:id="@+id/appnamestring"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="170dp"
            android:text="@string/splash_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/tv_bxbxb2ai"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginBottom="100dp"
        android:text="rock.zhang.cn@gmail.com"/>

    </RelativeLayout>